<div style="background-color: #303030;display: flex;gap: 42px;width: 100;font-size: 29px;width: 100%;height: 54px;padding: 101x;align-items: center;/* padding-right: 36px; */box-shadow: 0px 1px 3px #181818;justify-content: center;align-content: center;">
    @if (ShowPageNavigation)
    {
        <span class="oi oi-chevron-left" style="font-size: 30px;" @onclick="DecrementPage"></span>
    }
    <h2 style="/* font-weight: 600; */margin: 0px;/* letter-spacing: 3px; */font-family: system-ui;font-kerning: 2rem;">@Title</h2>
    @if (ShowPageNavigation)
    {
        <span class="oi oi-chevron-right" style="font-size: 30px;" @onclick="IncrementPage"></span>
    }
</div>

@code {
    [Parameter]
    public string Title { get; set; } = "...";

    [Parameter]
    public Action DecrementPage { get; set; }

    [Parameter]
    public Action IncrementPage { get; set; }

    [Parameter]
    public bool ShowPageNavigation { get; set; } = true;
}
